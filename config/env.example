# Copy to .env.local and adjust values. Do NOT commit secrets.

# Server-side base URL for external API
API_BASE_URL="https://api.example.com/"

# Optional: client-side base URL if the API is public
NEXT_PUBLIC_API_BASE_URL=""

# Server-only API key/token (do NOT prefix with NEXT_PUBLIC_)
API_KEY=""

# Secret used to encrypt API token in local store (set this in .env.local)
TOKEN_SECRET="change-me-please"

# OFD Ferma API (set in .env.local)
# Base URL, e.g. https://api.ofd.ru/ferma/
FERMA_BASE_URL="https://ferma.ofd.ru/"
# Either API key (preferred) or basic auth login/password
FERMA_API_KEY=""
FERMA_LOGIN=""
FERMA_PASSWORD=""
# Or native protocol AuthToken
FERMA_AUTH_TOKEN=""
# Optional custom paths for endpoints
FERMA_CREATE_PATH="/api/kkt/cloud/receipt"
FERMA_STATUS_PATH="/api/kkt/cloud/receipt/{id}"


